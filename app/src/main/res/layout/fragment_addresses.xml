<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddressesFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/textview11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        cardView:cardCornerRadius="2dp"
        cardView:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textSize="@dimen/headingCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Saved Addresses"
                android:textColor="@color/colorAccent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/sectionSeparatorCardView"
                android:background="@color/sectionSeparatorCardView" />

            <!--<ImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:contentDescription="No info saved"-->
                <!--android:scaleType="centerCrop"-->
                <!--android:src="@drawable/potato" />-->

            <!--<TextView-->
                <!--style="@android:style/TextAppearance.DeviceDefault.Medium"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center"-->
                <!--android:textSize="16sp"-->
                <!--android:padding="8dp"-->
                <!--android:text="Oops! No saved address found. Add one now!"-->
                <!--android:textColor="@color/colorAccent" />-->

            <android.support.v7.widget.RecyclerView

                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/address_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:visibility="visible"
                android:scrollbars="vertical"
                android:overScrollMode="never"/>

            <TextView
                android:id="@+id/noSavedAddTextview"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No saved Address found. Add one now!"
                android:padding="10dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAddAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        android:clickable="true"
        android:src="@drawable/ic_plus"
        app:backgroundTint="@color/colorAccent"
        app:fabSize="normal" />

</RelativeLayout>