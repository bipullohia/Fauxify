    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:cardView="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:elevation="1dp"
        android:id="@+id/switchVegCardView"
        android:layout_margin="5dp"
        android:layout_below="@id/toolbar_restaurantdetails"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Show only Vegetarian Items"
                style="@style/Base.TextAppearance.AppCompat.Small"/>

           <Switch
               android:layout_width="wrap_content"
               android:switchMinWidth="50dp"
               android:id="@+id/switchVeg"
               android:layout_height="wrap_content"
               android:layout_weight="1"
            />

        </LinearLayout>

        </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearlayout"
        android:layout_below="@+id/switchVegCardView">

        <android.support.design.widget.TabLayout
            android:id="@+id/menu_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="7dp"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextColor="@color/darkGray"
            app:tabIndicatorColor="@color/colorPrimary"
            android:paddingRight="7dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:tabGravity="fill"
            app:tabMode="scrollable" />

        <android.support.v4.view.ViewPager
            android:id="@+id/menu_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>


    </LinearLayout>




